<?xml version="1.0" encoding="UTF-8"?>
<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="
		http://www.osgi.org/xmlns/blueprint/v1.0.0
		http://www.osgi.org/xmlns/blueprint/v1.0.0/blueprint.xsd">

	<!-- Published Services -->

	<service interface="net.solarnetwork.ocpp.service.ChargePointRouter">
		<service-properties>
			<entry key="function" value="node"/>
		</service-properties>
		<bean class="net.solarnetwork.ocpp.service.ChargePointBrokerTracker">
			<argument>
				<bean class="net.solarnetwork.common.osgi.service.DynamicServiceTracker">
					<argument ref="bundleContext"/>
					<argument value="net.solarnetwork.ocpp.service.ChargePointBroker"/>
				</bean>
			</argument>
		</bean>
	</service>
	
	<!-- 
		OCPP JSON support
	 -->

	<bean id="ocppObjectMapper" class="ocpp.json.support.BaseActionPayloadDecoder" factory-method="defaultObjectMapper"/>
	
	<service interface="net.solarnetwork.service.ObjectMapperService">
		<service-properties>
			<entry key="role" value="ocpp"/>
		</service-properties>
		<bean class="net.solarnetwork.service.support.SimpleObjectMapperService">
			<property name="objectMapper" ref="ocppObjectMapper"/>
		</bean>
	</service>
	
</blueprint>
